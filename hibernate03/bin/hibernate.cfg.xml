<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
        <!-- Hibernate连接数据库基本信息 -->
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql:///hibernate5</property>

		<!-- Hibernate的基本配置：使用的数据库方言 ，这里必须要用org.hibernate.dialect.MySQLDialect，否则，不能创建数据库表 -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- 执行操作时是否在控制台打印SQL -->
		<property name="show_sql">true</property>

		<!-- 是否对SQl进行格式化 -->
		<property name="format_sql">true</property>

		<!-- 指定自动生成策略 -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<!-- 设置Hibernate的事务隔离级别 :2表示读已提交 -->
		<property name="connection.isolation">2</property>

		<!-- 删除OID后使其置为null -->
		<property name="use_identifier_rollback">true</property>

		<!-- 配置c3p0数据源 -->
		<property name="hibernate.c3p0.max_size">10</property>
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="c3p0.acquire_increment">2</property>
		<property name="c3p0.idle_test_period">2000</property>
		<property name="c3p0.timeout">2000</property>
		<property name="c3p0.max_statements">10</property>

		<!-- 设定 JDBC 的 Statement 读取数据的时候每次从数据库中取出的记录条数,对于myMsql无效，对于Oracle有效 -->
		<property name="hibernate.jdbc.fetch_size">100</property>

		<!-- 设定对数据库进行批量删除，批量更新和批量插入的时候的批次大小 ，对于myMsql无效，对于Oracle有效 -->
		<property name="hibernate.jdbc.batch_size">30</property>

		<!-- 指定关联的.hbm.xml文件 -->
		<!--  
		<mapping resource="com/hibernate03/one2one/primary/Manager.hbm.xml"/>
		<mapping resource="com/hibernate03/one2one/primary/Department.hbm.xml"/>
		
		
		<mapping resource="com/hibernate/n2n/Category.hbm.xml"/>
		<mapping resource="com/hibernate/n2n/Item.hbm.xml"/>
	
	    <mapping resource="com/hibernate/subclass/Person.hbm.xml"/>
	   
	    <mapping resource="com/hibernate/joined/subclass/Person.hbm.xml"/>
	    <mapping resource="com/hibernate/union/subclass/Person.hbm.xml"/>
	     -->
	     <mapping resource="com/hibernate/strategy/Customer.hbm.xml"/>
	     <mapping resource="com/hibernate/strategy/Order.hbm.xml"/>
	</session-factory>
</hibernate-configuration>
